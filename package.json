{
  "name": "@ldesign/pdf",
  "version": "2.0.0",
  "description": "Enterprise-grade PDF viewer with advanced features: forms, signatures, virtual scrolling, touch gestures, and more",
  "main": "dist/pdf-viewer.js",
  "module": "dist/pdf-viewer.esm.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "build:prod": "NODE_ENV=production rollup -c",
    "dev": "rollup -c -w",
    "serve": "http-server -p 8080",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "format": "prettier --write src/**/*.{js,ts,css}",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc src/index.ts",
    "analyze": "rollup-plugin-visualizer"
  },
  "keywords": [
    "pdf",
    "viewer",
    "pdf-viewer",
    "react",
    "vue",
    "angular",
    "vanilla",
    "framework-agnostic"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "pdfjs-dist": "^3.11.174"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.10.5",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.9.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-css-only": "^4.5.2",
    "rollup-plugin-visualizer": "^5.11.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typedoc": "^0.25.4",
    "http-server": "^14.1.1"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ]
}